<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogForNewTable_ll">




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Only alphabets and numbers"
        android:id="@+id/dialogForNewTable_et_name"/>


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/term"
        android:id="@+id/dialogForNewTable_spinner_term"
        android:spinnerMode="dropdown"
        android:layout_weight="1" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/year"
        android:id="@+id/dialogForNewTable_spinner_year"
        android:spinnerMode="dropdown"
        android:layout_weight="1" />




</LinearLayout>