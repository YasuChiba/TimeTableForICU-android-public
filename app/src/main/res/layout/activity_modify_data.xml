<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/modify_data_scrollView"
    android:background="@color/forBackground"
    tools:context="com.TimeTableForICU.yasuhirachiba.timetableforicu.modify_data.modify_data">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/modify_data_root_relative"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/modify_data_cardView"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Course title"
                            android:id="@+id/textView1"
                            android:textSize="20dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:text="color"
                            android:layout_weight="0.2"
                            android:layout_gravity="right"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/modify_data_cstitle"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/modify_data_color_choice_color"
                                android:background="@drawable/border"
                                android:layout_gravity="right"
                                android:text=" "/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/modify_data_color_choice"
                                android:background="@drawable/border"
                                android:layout_gravity="right"
                                android:text=" "/>






                        </FrameLayout>









                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="class room"
                        android:id="@+id/textView2"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/modify_data_classroom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="teacher"
                        android:id="@+id/textView3"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/modify_data_csteacher" />






















                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="schedule"
                        android:id="@+id/textView4"
                        android:textSize="20dp" />




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/week"
                            android:id="@+id/spinner_week"
                            android:spinnerMode="dropdown"
                            android:dropDownWidth="60dp"

                            android:layout_weight="1" />

                        <android.support.v4.widget.Space
                            android:layout_width="15dp"
                            android:layout_height="match_parent" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/period"
                            android:id="@+id/spinner_period"
                            android:spinnerMode="dropdown"
                            android:dropDownWidth="60dp"
                            android:layout_weight="1" />

                        <android.support.v4.widget.Space
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/modify_data_button_schedule_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BootstrapButton"
                            app:bootstrapBrand="primary"
                            app:bootstrapSize="md"
                            app:buttonMode="regular"
                            app:showOutline="false"
                            app:roundedCorners="true"
                            android:layout_margin="10dp"
                            app:bootstrapText="Add"
                            />



                    </LinearLayout>


                    <com.TimeTableForICU.yasuhirachiba.timetableforicu.ExpandableHeightGridView
                        android:id="@+id/modify_data_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:verticalSpacing="10dp"
                        android:horizontalSpacing="5dp"
                        android:numColumns="3">
                    </com.TimeTableForICU.yasuhirachiba.timetableforicu.ExpandableHeightGridView>



                    <com.TimeTableForICU.yasuhirachiba.timetableforicu.CustomListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/modify_data_listView">


                    </com.TimeTableForICU.yasuhirachiba.timetableforicu.CustomListView>















                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />




                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_gravity="right"
                        android:id="@+id/modify_data_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BootstrapButton"
                        app:bootstrapBrand="primary"
                        app:bootstrapSize="sm"
                        app:buttonMode="regular"
                        app:showOutline="false"
                        app:roundedCorners="true"
                        android:layout_margin="0dp"
                        app:bootstrapText="更に表示"
                        />







                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/modify_data_ll_more">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="詳細設定"/>





                        </LinearLayout>



                    </LinearLayout>


                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/modify_data_button_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BootstrapButton"
                        app:bootstrapBrand="success"
                        app:bootstrapSize="xl"
                        app:buttonMode="regular"
                        app:showOutline="false"
                        app:roundedCorners="true"
                        android:layout_margin="0dp"
                        app:bootstrapText="@string/button_ok"
                        />

















                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>
